<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:textAppearanceLarge" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_city"
        android:layout_toRightOf="@+id/tx_name"
        android:text="city"
        android:layout_marginLeft="7dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:textAppearanceLarge"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_address"
        android:layout_toRightOf="@+id/tx_city"
        android:text="Address"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:textAppearanceLarge" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_mobileno"
        android:layout_toRightOf="@+id/tx_address"
        android:text="Mobile"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:textAppearanceLarge"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_requirement"
        android:layout_toRightOf="@+id/tx_mobileno"
        android:text="Requirement"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:textAppearanceLarge" />
    </LinearLayout>
</ScrollView>