<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RowaterRepair_order"
    android:background="#fff">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"
            android:background="#34776E"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="138dp"
        android:gravity="center"
        android:text="Select The Service Type....?"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="270dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="284dp"
        android:id="@+id/cardmicrowave">

        <TextView
            android:id="@+id/Repair"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_lastpage"
            android:text="Repair price"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Rupees"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="20dp"
            android:hint="Rupees">


        </TextView>

        <TextView
            android:id="@+id/editwashing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_marginLeft="20dp"
            android:text="Completer Diagnosis of the Machine." />
        <TextView
            android:id="@+id/spare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Spare parts(S)Cost Extra.Price As Per Rate Card." />



    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textinstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Servicing/Filter Change"
        android:textSize="20dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="500dp"
        android:id="@+id/cardmicro">


        <TextView
            android:id="@+id/installRepair"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_lastpage"
            android:text="Rs. "
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/installRupees"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="20dp"
            android:hint="Rupees" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaning Of Machine And All Filters."
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Filter Change Cost Extra.Price as per rate Card."
            android:layout_marginTop="80dp"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>