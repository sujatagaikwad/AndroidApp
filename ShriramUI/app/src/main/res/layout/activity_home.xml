<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#fff">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/v_Fipper"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:id="@+id/machincard">

        <CheckedTextView
            android:id="@+id/checkedTextView_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:text="washing machines"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/washing" />
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="280dp"
            android:id="@+id/refrigeratorcard">
            <CheckedTextView
                android:id="@+id/checkedrefrigerator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Refrigerator machines"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagerefrigerator"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/refrigerator" />
        </androidx.cardview.widget.CardView>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="370dp"
            android:id="@+id/microcard">
            <CheckedTextView
                android:id="@+id/checkedmicrowave"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text=" Microwave machine"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagemicrowave"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/microwave" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="465dp"
            android:id="@+id/accard">

            <CheckedTextView
                android:id="@+id/checkedTextView_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Ac Service And Repair "
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagewash"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/acrepair" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="560dp"
            android:id="@+id/rocard">
            <CheckedTextView
                android:id="@+id/checkedrowater"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Ro- Water Purifier Repair"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagerowater"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/roservice" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


